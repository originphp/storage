{
    "name": "originphp/storage",
    "description": "OriginPHP Storage",
    "type": "library",
    "keywords": [
        "originphp",
        "storage",
        "sftp",
        "ftp",
        "local",
        "disk",
        "zip",
        "s3",
        "minio"
    ],
    "homepage": "https://www.originphp.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Jamiel Sharief",
            "email": "js@originphp.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Origin\\Storage\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Origin\\Test\\Storage\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.3.0",
        "originphp/configurable": "^2.0",
        "originphp/defer": "^2.0",
         "ext-zip": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.2",
        "phpseclib/phpseclib": "~2.0",
        "aws/aws-sdk-php": "^3.1"
    },
    "suggest": {
        "phpseclib/phpseclib": "Install this to use the SFTP Engine",
        "aws/aws-sdk-php": "Install this to use the S3 Engine"
    }
}
